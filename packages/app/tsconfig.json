{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "esModuleInterop": false,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite-plugin-sentry/client"],
    "resolveJsonModule": true,
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"],
      "lib": ["../lib/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
