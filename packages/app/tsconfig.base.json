{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "esModuleInterop": false,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite-plugin-sentry/client"],
    "resolveJsonModule": true,
    "module": "ESNext"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "e2e/**/*.ts",
    "playwright/**/*.ts",
    "package.json",
    "playwright.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
