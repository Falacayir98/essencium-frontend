{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES6",
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "index.d.ts", "rollup.config.js"],
  "exclude": ["dist", "node_modules", ".rollup.cache", "src/**/*.json"]
}
