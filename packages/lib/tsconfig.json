{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES6",
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", ".rollup.cache"]
}
