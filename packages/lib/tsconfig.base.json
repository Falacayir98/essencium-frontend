{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES6",
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "rollup.config.js",
    "./declaration.d.ts"
  ],
  "exclude": ["dist", "node_modules", ".rollup.cache"]
}
